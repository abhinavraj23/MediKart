<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.medikart.FragmentOne"
    android:id="@+id/frag1">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp">


        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:text="Search"
            android:textColor="#FFF"
            android:layout_marginBottom="20dp"/>


        <TextView
            android:id="@+id/branded_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Branded Name"
            android:textSize="25dp"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            android:textColor="#FF4500"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/branded_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sample"
                android:textSize="20dp"
                android:layout_marginLeft="25dp"
                android:textColor="#FFF"/>


            <TextView
                android:id="@+id/branded_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"
                android:paddingLeft="150dp"
                android:textSize="20dp"
                android:textColor="#FFF"/>

        </LinearLayout>


            <TextView
                android:id="@+id/branded_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="type"
                android:textSize="15dp"
                android:layout_marginLeft="25dp"
                android:textColor="#FFF"/>

            <TextView
                android:id="@+id/branded_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="weight"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="25dp"
                android:textColor="#FFF"/>


        <TextView
            android:id="@+id/branded_manufacturer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="manufacturer"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:textSize="15dp"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/generic_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generic Name"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            android:textColor="#FF4500"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/generic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sample"
                android:textSize="20dp"
                android:layout_marginLeft="25dp"
                android:textColor="#FFF"/>

            <TextView
                android:id="@+id/generic_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="150dp"
                android:text="price"
                android:textColor="#FFF"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/generic_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="weight"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:textColor="#FFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/saved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOU SAVED : "
                android:textColor="#00FF00"
                android:textSize="25dp"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:layout_marginLeft="80dp"/>

            <TextView
                android:id="@+id/profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRICE"
                android:textColor="#00FF00"
                android:textSize="25dp"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:paddingLeft="15dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/addToCart"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape"
            android:text="Add To Cart"
            android:textColor="#FFF"
            android:visibility="invisible" />

    </LinearLayout>



</FrameLayout>
